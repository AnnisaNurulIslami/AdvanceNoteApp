<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/mauve"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/textViewNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/note_content"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/imageViewNote"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textViewNote"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:contentDescription="@string/note_picture" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/imageViewNote"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/btnDelete"
            android:background="@drawable/ic_edit"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/imageViewNote"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_delete" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>